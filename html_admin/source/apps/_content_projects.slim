  .os-tabs-controls
    ul.nav.nav-tabs.upper
      li.nav-item
        a.nav-link aria-expanded="false" data-toggle="tab" href="#tab_overview"  Active
      li.nav-item
        a.nav-link aria-expanded="false" data-toggle="tab" href="#tab_sales"  Overview
      li.nav-item
        a.nav-link aria-expanded="false" data-toggle="tab" href="#tab_sales"  Closed
