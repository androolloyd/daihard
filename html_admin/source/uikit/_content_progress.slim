      .progress
        .progress-bar.bg-info aria-valuemax="100" aria-valuemin="0" aria-valuenow="50" role="progressbar" style=("width: 50%") 
      .progress
        .progress-bar.bg-warning aria-valuemax="100" aria-valuemin="0" aria-valuenow="75" role="progressbar" style=("width: 75%") 
      .progress
        .progress-bar.bg-danger aria-valuemax="100" aria-valuemin="0" aria-valuenow="100" role="progressbar" style=("width: 100%") 


  .element-box
    h5.form-header Multiple Bars
    .form-desc Include multiple progress bars in a progress component if you need.
